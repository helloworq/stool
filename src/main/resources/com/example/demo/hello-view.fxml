<HBox alignment="CENTER" prefHeight="473.0" prefWidth="614.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextArea fx:id="leftTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" HBox.hgrow="ALWAYS" />
   <VBox alignment="TOP_CENTER"  prefHeight="200.0" prefWidth="100.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" text="Run" fx:id="button" onMouseClicked="#click" />
         <CheckBox mnemonicParsing="false" text="去除\n\t" />
         <CheckBox mnemonicParsing="false" text="Json美化" />
      </children>
   </VBox>
   <TextArea fx:id="rightTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" HBox.hgrow="ALWAYS" />
</HBox>
